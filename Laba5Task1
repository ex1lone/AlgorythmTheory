#include <stdio.h>
#include <stdlib.h>

#define V 8
#define INF 999999

void prim(int G[V][V]) {

    int no_edge = 0;
    int selected[V] = {0};

    selected[0] = 1;

    int x, y, total = 0;

    printf("Ребро  Вага\n");

    while (no_edge < V - 1) {
        int min = INF;
        x = 0;
        y = 0;

        for (int i = 0; i < V; i++) {
            if (selected[i] == 1) {
                for (int j = 0; j < V; j++) {
                    if (!selected[j] && G[i][j] != INF) {
                        if (min > G[i][j]) {
                            min = G[i][j];
                            x = i;
                            y = j;
                        }
                    }
                }
            }
        }

        total += G[x][y];
        printf("%d - %d   %d\n", x + 1, y + 1, G[x][y]);
        selected[y] = 1;
        no_edge++;
    }

    printf("Загальна вага: %d\n", total);
}

int main() {

    system("chcp 65001");

    int G[V][V] = {
        {INF,INF,6  ,7  ,INF,8  ,INF,INF},
        {INF,INF,INF,3  ,4  ,2  ,INF,INF},
        {6  ,INF,INF,INF,INF,3  ,INF,7  },
        {7  ,3  ,INF,INF,9  ,INF,INF,INF},
        {INF,4  ,INF,9  ,INF,INF,5  ,INF},
        {8  ,2  ,3  ,INF,INF,INF,9  ,3  },
        {INF,INF,INF,INF,5  ,9  ,INF,INF},
        {INF,INF,7  ,INF,INF,3  ,INF,INF}
    };

    prim(G);
    return 0;
}
