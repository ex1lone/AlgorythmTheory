#include <stdio.h>
#include <stdlib.h>

int prisv = 0, srav = 0, recur = 0;

void print(int arr[], int n) {
    for (int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
}

void merge(int A[], int left[], int right[], int l, int r) {
    int i = 0, j = 0, k = 0;

    while (i < l && j < r) {
        srav++;
        if (left[i] <= right[j]) {
            A[k++] = left[i++];
            prisv++;
        } else {
            A[k++] = right[j++];
            prisv++;
        }
    }

    while (i < l) {
        A[k++] = left[i++];
        prisv++;
    }

    while (j < r) {
        A[k++] = right[j++];
        prisv++;
    }
}

void mergeSort(int A[], int n) {
    if (n < 2) {
        return;
    }

    int mid = n / 2;

    int *left = (int*)malloc(mid * sizeof(int));
    int *right = (int*)malloc((n - mid) * sizeof(int));

    for (int i = 0; i < mid; i++) {
        left[i] = A[i];
        prisv++;
    }

    for (int i = mid; i < n; i++) {
        right[i - mid] = A[i];
        prisv++;
    }

    recur++;
    mergeSort(left, mid);

    recur++;
    mergeSort(right, n - mid);

    printf("left part:\n");
    print(left, mid);
    printf("\nright part:\n");
    print(right, n - mid);

    merge(A, left, right, mid, n - mid);

    printf("\nAfter merge:\n");
    print(A, n);

    printf("\nAssignees: %d Comparisons: %d Recursion calls: %d\n\n",
           prisv, srav, recur);

    free(left);
    free(right);
}

int main() {
    int A[] = {12, 23, 67, 65, 50, 70, 80, 61, 92};
    int n = sizeof(A)/sizeof(A[0]);

    print(A, n);
    printf("\n\n");

    mergeSort(A, n);

    return 0;
}
