#include <stdio.h>

int ass = 0, comp = 0, recur = 1;

void print(int arr[], int n) {
    printf("\n ");
    for(int i = 0; i < n; i++){
        printf("%d ", arr[i]);
    }
    printf("\n");
}

void heapify(int arr[], int n, int i) {

    int largest = i;
    int l = 2 * i + 1;
    int r = 2 * i + 2;
    ass += 3;

    if (l < n) {
        if (arr[l] > arr[largest]) {
            largest = l;
            ass++;
        }
        comp++;
    }
    comp++;

    if (r < n) {
        if (arr[r] > arr[largest]) {
            largest = r;
            ass++;
        }
        comp++;
    }
    comp++;

    printf("Largest:%d index:%d i:%d\n", arr[largest], largest, i);

    comp++;
    if (largest != i) {
        int swap = arr[i];
        arr[i] = arr[largest];
        arr[largest] = swap;
        ass += 3;

        recur++;
        heapify(arr, n, largest);
    }
}

void sort(int arr[], int n) {

    printf("BUILDING HEAP\n");

    for (int i = n / 2 - 1; i >= 0; i--) {
        heapify(arr, n, i);
        printf("Assignees:%d Comparissons:%d Recursive calls:%d\n",
               ass, comp, recur);
    }

    printf("ARRAY AFTER HEAP BUILD");
    print(arr, n);

    printf("\nSORTING HEAP\n");

    for (int i = n - 1; i >= 0; i--) {

        int temp = arr[0];
        arr[0] = arr[i];
        arr[i] = temp;
        ass += 3;

        heapify(arr, i, 0);

        print(arr, n);

        printf("Assignees:%d Comparissons:%d Recursive calls:%d\n",
               ass, comp, recur);
    }
}

int main() {

    int A[] = {12, 23, 67, 65, 50, 70, 80, 61, 92};
    int n = sizeof(A)/sizeof(A[0]);

    sort(A, n);

    print(A, n);

    return 0;
}
